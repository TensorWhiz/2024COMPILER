{
    "version": "0.2.0",
    "configurations": [

      {
        "name": "Debug Compiler",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/compiler",
        "args": ["${fileDirname}/${fileBasenameNoExtension}.tea"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/src",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": false
          }
        ],
        //"preLaunchTask": "Clean and Build"
      },
      {
        "name": "Debug asm with QEMU",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/output/asm/${fileBasenameNoExtension}",
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb-multiarch",
        "miDebuggerServerAddress": "127.0.0.1:1234",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Run QEMU" // 自动启动 QEMU
      },
      {
        "name": "Debug lli with GDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/bin/lli", // 需要设置为你的 lli 可执行文件的路径
        "args": [
            "${workspaceFolder}/src/output/${fileBasenameNoExtension}.ll",
            "<",
            "${workspaceFolder}/src/tests/private/${fileBasenameNoExtension}.in"
            ,
            ">",
            "${workspaceFolder}/src/output/${fileBasenameNoExtension}.out"
        ],
        "stopAtEntry": true,
        "cwd": "/usr/lib/x86_64-linux-gnu",
        "environment": [],
        "externalConsole":false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": false
            }
        ],
        "miDebuggerPath": "/usr/bin/gdb", // 请根据你的系统设置路径
    }
      
    ]
  }
  